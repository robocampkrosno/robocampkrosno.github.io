---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Regular Lighter</title>
	<link href="http://regularlighter.com/atom.xml" rel="self"/>
	<link href="http://regularlighter.com"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://regularlighter.com</id>
	<author>
		<name>Bartosz Wais</name>
		<email>bartoszwais@gmail.com</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="http://regularlighter.com{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>http://regularlighter.com{{ post.id }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>
